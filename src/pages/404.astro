---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 | AHAM Automobile">
  <section class="error-page">
    <span class="error-code">404</span>
    <h1>Seite nicht <span class="italic text-gold">gefunden</span></h1>
    <p>Die gew√ºnschte Seite existiert leider nicht.</p>
    <div class="error-actions">
      <a href="/" class="btn btn-primary">Zur Startseite</a>
      <a href="/fahrzeuge" class="btn btn-ghost">Zur Kollektion</a>
    </div>
  </section>
</Layout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-lg);
  }
  
  .error-code {
    font-family: var(--font-display);
    font-size: 10rem;
    line-height: 1;
    color: var(--graphite);
    margin-bottom: var(--space-md);
  }
  
  .error-page h1 {
    margin-bottom: var(--space-sm);
  }
  
  .error-page p {
    margin-bottom: var(--space-lg);
  }
  
  .error-actions {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  @media (max-width: 768px) {
    .error-code { font-size: 6rem; }
    .error-actions { flex-direction: column; }
  }
</style>
