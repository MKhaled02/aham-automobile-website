<style>
  .kontakt-hero {
    background: var(--cream);
    padding: 150px 60px 80px;
    text-align: center;
  }
  
  .kontakt-hero h1 {
    margin-bottom: 15px;
  }
  
  .kontakt-hero h1 span {
    color: var(--olive);
  }
  
  .kontakt-hero p {
    color: var(--gray);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .kontakt-main {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    min-height: 500px;
  }
  
  .kontakt-info {
    padding: 60px;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  
  .info-card {
    padding-bottom: 40px;
    border-bottom: 1px solid var(--gray-light);
  }
  
  .info-card:last-child {
    border-bottom: none;
  }
  
  .info-icon {
    font-size: 2rem;
    margin-bottom: 15px;
    display: block;
  }
  
  .info-card h3 {
    font-size: 1.2rem;
    margin-bottom: 15px;
  }
  
  .info-card p {
    color: var(--gray-dark);
    line-height: 1.8;
  }
  
  .phone-link {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--olive);
    transition: color 0.3s ease;
  }
  
  .phone-link:hover {
    color: var(--olive-dark);
  }
  
  .info-link {
    display: inline-block;
    margin-top: 15px;
    color: var(--olive);
    font-weight: 500;
    transition: gap 0.3s ease;
  }
  
  .info-link:hover {
    text-decoration: underline;
  }
  
  .info-note {
    font-size: 0.85rem;
    color: var(--gray);
    margin-top: 10px;
  }
  
  .kontakt-map {
    background: var(--gray-light);
  }
  
  .kontakt-map iframe {
    filter: grayscale(100%) contrast(1.1);
  }
  
  .cta-section {
    background: var(--olive);
    color: var(--white);
    padding: 80px 60px;
    text-align: center;
  }
  
  .cta-section h2 {
    color: var(--white);
    margin-bottom: 15px;
  }
  
  .cta-section p {
    margin-bottom: 30px;
    opacity: 0.9;
  }
  
  .cta-section .btn-primary {
    background: var(--white);
    color: var(--olive);
    border-color: var(--white);
  }
  
  .cta-section .btn-primary:hover {
    background: var(--cream);
  }
  
  @media (max-width: 968px) {
    .kontakt-hero {
      padding: 120px 20px 60px;
    }
    
    .kontakt-main {
      grid-template-columns: 1fr;
    }
    
    .kontakt-info {
      padding: 40px 20px;
    }
    
    .kontakt-map {
      height: 400px;
    }
    
    .cta-section {
      padding: 60px 20px;
    }
  }
</style>
