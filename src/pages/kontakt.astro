<style>
  .kontakt-hero { position: relative; padding: 180px 60px 100px; text-align: center; }
  .hero-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: var(--black-light); z-index: 0; }
  .hero-bg::before { content: ''; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 600px; height: 600px; background: radial-gradient(circle, var(--red-glow), transparent 70%); opacity: 0.3; }
  .kontakt-hero-content { position: relative; z-index: 1; }
  .kontakt-hero h1 { font-family: var(--font-display); font-size: clamp(3rem, 6vw, 5rem); }
  .text-red { color: var(--red); }
  .kontakt-main { display: grid; grid-template-columns: 1fr 1.5fr; min-height: 600px; }
  .kontakt-info { background: var(--black-card); padding: 60px; display: flex; flex-direction: column; }
  .info-card { padding: 40px 0; border-bottom: 1px solid var(--gray-light); }
  .info-card:last-child { border-bottom: none; }
  .info-card.featured { background: linear-gradient(135deg, var(--red-dark), var(--black)); margin: 0 -60px; padding: 40px 60px; border: none; }
  .info-icon { font-size: 2rem; margin-bottom: 15px; display: block; }
  .info-card h3 { font-family: var(--font-heading); font-size: 0.9rem; letter-spacing: 0.2em; color: var(--red); margin-bottom: 15px; }
  .info-card.featured h3 { color: var(--white); }
  .info-card p { color: var(--gray); line-height: 1.8; }
  .info-card.featured p { color: rgba(255,255,255,0.7); }
  .highlight { color: var(--red); font-weight: 600; }
  .phone-link { font-family: var(--font-display); font-size: 2.5rem; color: var(--white); display: block; margin-bottom: 10px; }
  .phone-link:hover { text-shadow: 0 0 30px var(--red-glow); }
  .info-link { display: inline-block; margin-top: 15px; color: var(--red); font-family: var(--font-heading); font-weight: 600; }
  .kontakt-map { background: var(--gray-light); }
  .kontakt-map iframe { filter: grayscale(100%) contrast(1.2); }
  @media (max-width: 968px) {
    .kontakt-hero { padding: 140px 20px 60px; }
    .kontakt-main { grid-template-columns: 1fr; }
    .kontakt-info { padding: 40px 20px; }
    .info-card.featured { margin: 0 -20px; padding: 40px 20px; }
    .kontakt-map { height: 400px; }
  }
</style>
