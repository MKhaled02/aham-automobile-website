---
import Layout from '../../layouts/Layout.astro';
import FahrzeugCard from '../../components/FahrzeugCard.astro';
import { getAlleFahrzeuge } from '../../lib/sanity';
import type { Fahrzeug } from '../../types/sanity';

const fahrzeuge: Fahrzeug[] = await getAlleFahrzeuge();
---

<Layout 
  title="Kollektion | AHAM Automobile"
  description="Unsere handverlesene Auswahl exklusiver Fahrzeuge in Ludwigsfelde."
>
  
  <!-- Hero -->
  <section class="page-hero">
    <div class="hero-content">
      <span class="label">Fahrzeuge</span>
      <h1>Unsere <span class="italic text-gold">Kollektion</span></h1>
      <p>{fahrzeuge.length} ausgewählte Fahrzeuge</p>
    </div>
    <div class="hero-line"></div>
  </section>
  
  <!-- Grid -->
  <section class="section collection">
    <div class="collection-grid">
      {fahrzeuge.length > 0 ? (
        fahrzeuge.map((fahrzeug, index) => (
          <FahrzeugCard fahrzeug={fahrzeug} index={index} />
        ))
      ) : (
        <div class="no-vehicles">
          <p class="font-display italic text-gold">Aktuell keine Fahrzeuge verfügbar</p>
          <p class="text-silver">Bitte kontaktieren Sie uns für individuelle Anfragen.</p>
          <a href="/kontakt" class="btn btn-primary">Kontakt aufnehmen</a>
        </div>
      )}
    </div>
  </section>
  
  <!-- CTA -->
  <section class="section cta">
    <div class="cta-content">
      <h2>Nicht das <span class="italic text-gold">Richtige</span> gefunden?</h2>
      <p>Wir helfen Ihnen bei der Suche nach Ihrem Wunschfahrzeug.</p>
      <a href="tel:01708949479" class="btn btn-primary">0170 894 9479</a>
    </div>
  </section>
  
</Layout>

<style>
  .page-hero {
    padding: 180px var(--space-lg) 80px;
    position: relative;
    background: var(--charcoal);
  }
  
  .hero-content {
    max-width: 600px;
  }
  
  .page-hero h1 {
    margin: var(--space-sm) 0;
  }
  
  .page-hero p {
    font-size: 1.1rem;
  }
  
  .hero-line {
    position: absolute;
    bottom: 0;
    left: var(--space-lg);
    right: var(--space-lg);
    height: 1px;
    background: linear-gradient(90deg, var(--gold), transparent);
  }
  
  .collection {
    background: var(--obsidian);
  }
  
  .collection-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }
  
  .no-vehicles {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-xl);
    background: var(--charcoal);
  }
  
  .no-vehicles p {
    margin-bottom: var(--space-sm);
  }
  
  .no-vehicles p:first-child {
    font-size: 1.5rem;
  }
  
  .no-vehicles .btn {
    margin-top: var(--space-md);
  }
  
  .cta {
    background: var(--charcoal);
    text-align: center;
  }
  
  .cta-content {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    margin-bottom: var(--space-sm);
  }
  
  .cta-content p {
    margin-bottom: var(--space-md);
  }
  
  @media (max-width: 1200px) {
    .collection-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .page-hero {
      padding: 150px var(--space-sm) 60px;
    }
    
    .collection-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
