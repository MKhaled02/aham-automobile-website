---
import Layout from '../../layouts/Layout.astro';
import FahrzeugCard from '../../components/FahrzeugCard.astro';
import { getAlleFahrzeuge } from '../../lib/sanity';
import type { Fahrzeug } from '../../types/sanity';

const fahrzeuge: Fahrzeug[] = await getAlleFahrzeuge();
---

<Layout 
  title="Unsere Fahrzeuge | AHAM Automobile"
  description="Entdecke unsere Auswahl an geprÃ¼ften Gebrauchtwagen in Ludwigsfelde."
>
  
  <!-- Hero -->
  <section class="page-hero">
    <div class="hero-bg"></div>
    <div class="page-hero-content">
      <span class="section-label">Unser Bestand</span>
      <h1>UNSERE <span class="text-red">FAHRZEUGE</span></h1>
      <p class="hero-count">
        <span class="count-number">{fahrzeuge.length}</span>
        <span class="count-label">Fahrzeuge verfÃ¼gbar</span>
      </p>
    </div>
    <div class="hero-accent"></div>
  </section>
  
  <!-- Fahrzeuge Grid -->
  <section class="section">
    <div class="fahrzeuge-grid">
      {fahrzeuge.length > 0 ? (
        fahrzeuge.map((fahrzeug, index) => (
          <div class="fahrzeug-wrapper" style={`animation-delay: ${index * 0.1}s`}>
            <FahrzeugCard fahrzeug={fahrzeug} />
          </div>
        ))
      ) : (
        <div class="no-results">
          <span class="no-icon">ðŸš—</span>
          <h3>Aktuell keine Fahrzeuge verfÃ¼gbar</h3>
          <p>Schau bald wieder vorbei oder kontaktiere uns fÃ¼r individuelle WÃ¼nsche.</p>
          <a href="/kontakt" class="btn btn-primary">Kontakt aufnehmen</a>
        </div>
      )}
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-bg"></div>
    <div class="cta-content">
      <h2>NICHT DAS <span>RICHTIGE</span> GEFUNDEN?</h2>
      <p>Wir helfen dir bei der Suche nach deinem Wunschfahrzeug.</p>
      <a href="tel:01708949479" class="btn btn-primary">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        0170 8949479
      </a>
    </div>
  </section>
  
</Layout>

<style>
  .page-hero {
    position: relative;
    padding: 180px 60px 100px;
    text-align: center;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--black-light);
    z-index: 0;
  }
  
  .hero-bg::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, var(--red-glow), transparent 70%);
    opacity: 0.2;
  }
  
  .page-hero-content {
    position: relative;
    z-index: 1;
  }
  
  .page-hero h1 {
    font-family: var(--font-display);
    font-size: clamp(3rem, 6vw, 5rem);
    margin-bottom: 20px;
  }
  
  .text-red {
    color: var(--red);
    text-shadow: 0 0 60px var(--red-glow);
  }
  
  .hero-count {
    display: inline-flex;
    align-items: baseline;
    gap: 15px;
    background: var(--black-card);
    border: 1px solid var(--gray-light);
    padding: 15px 30px;
  }
  
  .count-number {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--red);
  }
  
  .count-label {
    font-size: 0.9rem;
    color: var(--gray);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }
  
  .hero-accent {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--red), transparent);
  }
  
  .fahrzeuge-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .fahrzeug-wrapper {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .no-results {
    grid-column: 1 / -1;
    text-align: center;
    padding: 100px 20px;
    background: var(--black-card);
    border: 1px solid var(--gray-light);
  }
  
  .no-icon {
    font-size: 4rem;
    display: block;
    margin-bottom: 20px;
  }
  
  .no-results h3 {
    margin-bottom: 10px;
  }
  
  .no-results p {
    color: var(--gray);
    margin-bottom: 30px;
  }
  
  .cta-section {
    position: relative;
    padding: 100px 60px;
    text-align: center;
    overflow: hidden;
  }
  
  .cta-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--red-dark) 0%, var(--black) 100%);
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 15px;
    color: var(--white);
  }
  
  .cta-content h2 span {
    color: var(--white);
  }
  
  .cta-content p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 30px;
  }
  
  .cta-section .btn-primary {
    background: var(--white);
    color: var(--red);
  }
  
  .cta-section .btn-primary:hover {
    background: var(--black);
    color: var(--white);
  }
  
  @media (max-width: 1200px) {
    .fahrzeuge-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .page-hero {
      padding: 140px 20px 60px;
    }
    
    .fahrzeuge-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-section {
      padding: 60px 20px;
    }
  }
</style>
