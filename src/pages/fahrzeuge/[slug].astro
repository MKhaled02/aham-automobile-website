---
import Layout from '../../layouts/Layout.astro';
import FahrzeugCard from '../../components/FahrzeugCard.astro';
import { getAlleFahrzeugSlugs, getFahrzeugBySlug, getAehnlicheFahrzeuge, urlFor } from '../../lib/sanity';
import type { Fahrzeug } from '../../types/sanity';

export async function getStaticPaths() {
  const slugs = await getAlleFahrzeugSlugs();
  return slugs
    .filter((item: { slug: string }) => item.slug)
    .map((item: { slug: string }) => ({
      params: { slug: item.slug }
    }));
}

const { slug } = Astro.params;
const fahrzeug: Fahrzeug = await getFahrzeugBySlug(slug!);

if (!fahrzeug) {
  return Astro.redirect('/404');
}

const aehnliche = await getAehnlicheFahrzeuge(fahrzeug.marke, fahrzeug._id);

const title = `${fahrzeug.marke} ${fahrzeug.modell} | AHAM Automobile`;

const kraftstoffLabels: Record<string, string> = {
  benzin: 'Benzin', diesel: 'Diesel', elektro: 'Elektro',
  'hybrid-benzin': 'Hybrid', 'hybrid-diesel': 'Hybrid', 'plugin-hybrid': 'Plug-in-Hybrid'
};

const getriebeLabels: Record<string, string> = {
  automatik: 'Automatik', schaltung: 'Schaltgetriebe', halbautomatik: 'Halbautomatik'
};
---

<Layout title={title}>
  
  <!-- Breadcrumb -->
  <nav class="breadcrumb">
    <a href="/">Start</a>
    <span>—</span>
    <a href="/fahrzeuge">Kollektion</a>
    <span>—</span>
    <span class="current">{fahrzeug.marke} {fahrzeug.modell}</span>
  </nav>
  
  <!-- Vehicle Detail -->
  <article class="vehicle-detail">
    
    <!-- Gallery -->
    <section class="gallery">
      <div class="gallery-main">
        {fahrzeug.hauptbild && (
          <img 
            src={urlFor(fahrzeug.hauptbild).width(1200).height(800).url()} 
            alt={`${fahrzeug.marke} ${fahrzeug.modell}`}
            id="main-image"
          />
        )}
        {fahrzeug.status === 'reserviert' && (
          <span class="vehicle-status">Reserviert</span>
        )}
      </div>
      
      {fahrzeug.galerie && fahrzeug.galerie.length > 0 && (
        <div class="gallery-thumbs">
          <button class="thumb active" data-src={urlFor(fahrzeug.hauptbild).width(1200).height(800).url()}>
            <img src={urlFor(fahrzeug.hauptbild).width(200).height(150).url()} alt="Hauptbild" />
          </button>
          {fahrzeug.galerie.map((bild, i) => (
            <button class="thumb" data-src={urlFor(bild).width(1200).height(800).url()}>
              <img src={urlFor(bild).width(200).height(150).url()} alt={`Bild ${i + 2}`} />
            </button>
          ))}
        </div>
      )}
    </section>
    
    <!-- Info -->
    <section class="vehicle-info">
      <div class="info-header">
        <span class="label">{fahrzeug.marke}</span>
        <h1>{fahrzeug.modell}</h1>
        <span class="vehicle-year">{fahrzeug.baujahr}</span>
      </div>
      
      <div class="info-price">
        <span class="price-amount">{fahrzeug.preis?.toLocaleString('de-DE')}</span>
        <span class="price-currency">EUR</span>
        {fahrzeug.mwst && <span class="price-vat">inkl. MwSt.</span>}
      </div>
      
      <div class="info-specs">
        <div class="spec-row">
          <span class="spec-label">Kilometerstand</span>
          <span class="spec-value">{fahrzeug.kilometerstand?.toLocaleString('de-DE')} km</span>
        </div>
        <div class="spec-row">
          <span class="spec-label">Kraftstoff</span>
          <span class="spec-value">{kraftstoffLabels[fahrzeug.kraftstoff] || fahrzeug.kraftstoff}</span>
        </div>
        <div class="spec-row">
          <span class="spec-label">Getriebe</span>
          <span class="spec-value">{getriebeLabels[fahrzeug.getriebe] || fahrzeug.getriebe}</span>
        </div>
        {fahrzeug.leistungPS && (
          <div class="spec-row">
            <span class="spec-label">Leistung</span>
            <span class="spec-value">{fahrzeug.leistungPS} PS ({Math.round(fahrzeug.leistungPS * 0.7355)} kW)</span>
          </div>
        )}
        {fahrzeug.hubraum && (
          <div class="spec-row">
            <span class="spec-label">Hubraum</span>
            <span class="spec-value">{fahrzeug.hubraum.toLocaleString('de-DE')} ccm</span>
          </div>
        )}
        {fahrzeug.farbe && (
          <div class="spec-row">
            <span class="spec-label">Farbe</span>
            <span class="spec-value">{fahrzeug.farbe}</span>
          </div>
        )}
        {fahrzeug.fahrzeugtyp && (
          <div class="spec-row">
            <span class="spec-label">Typ</span>
            <span class="spec-value">{fahrzeug.fahrzeugtyp}</span>
          </div>
        )}
      </div>
      
      {fahrzeug.ausstattung && fahrzeug.ausstattung.length > 0 && (
        <div class="info-features">
          <h3>Ausstattung</h3>
          <ul>
            {fahrzeug.ausstattung.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      )}
      
      {fahrzeug.beschreibung && (
        <div class="info-description">
          <h3>Beschreibung</h3>
          <p>{fahrzeug.beschreibung}</p>
        </div>
      )}
      
      <div class="info-cta">
        <p>Interesse an diesem Fahrzeug?</p>
        <a href="tel:01708949479" class="btn btn-primary">
          Jetzt anrufen — 0170 894 9479
        </a>
        <a href="/kontakt" class="btn btn-ghost">Anfrage senden</a>
      </div>
    </section>
    
  </article>
  
  <!-- Similar Vehicles -->
  {aehnliche && aehnliche.length > 0 && (
    <section class="section similar">
      <div class="similar-header">
        <span class="label">Weitere Empfehlungen</span>
        <h2>Ähnliche <span class="italic text-gold">Fahrzeuge</span></h2>
      </div>
      <div class="similar-grid">
        {aehnliche.map((f: Fahrzeug, i: number) => (
          <FahrzeugCard fahrzeug={f} index={i} />
        ))}
      </div>
    </section>
  )}
  
</Layout>

<script>
  document.querySelectorAll('.thumb').forEach(thumb => {
    thumb.addEventListener('click', () => {
      const mainImage = document.getElementById('main-image') as HTMLImageElement;
      const src = thumb.getAttribute('data-src');
      if (mainImage && src) {
        mainImage.src = src;
        document.querySelectorAll('.thumb').forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
      }
    });
  });
</script>

<style>
  .breadcrumb {
    padding: 120px var(--space-lg) var(--space-md);
    font-size: 0.8rem;
    color: var(--silver);
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .breadcrumb a {
    color: var(--silver);
    transition: color 0.3s ease;
  }
  
  .breadcrumb a:hover {
    color: var(--gold);
  }
  
  .breadcrumb .current {
    color: var(--pearl);
  }
  
  .vehicle-detail {
    display: grid;
    grid-template-columns: 1.3fr 1fr;
    gap: var(--space-lg);
    padding: 0 var(--space-lg) var(--space-xl);
  }
  
  /* Gallery */
  .gallery-main {
    position: relative;
    margin-bottom: var(--space-sm);
  }
  
  .gallery-main img {
    width: 100%;
    height: auto;
  }
  
  .vehicle-status {
    position: absolute;
    top: 20px;
    left: 20px;
    font-family: var(--font-headline);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.95);
    color: var(--obsidian);
  }
  
  .gallery-thumbs {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .thumb {
    border: 1px solid var(--slate);
    background: none;
    padding: 0;
    cursor: pointer;
    transition: border-color 0.3s ease;
    overflow: hidden;
  }
  
  .thumb img {
    width: 80px;
    height: 60px;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }
  
  .thumb:hover,
  .thumb.active {
    border-color: var(--gold);
  }
  
  /* Info */
  .vehicle-info {
    padding-top: var(--space-md);
  }
  
  .info-header {
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--slate);
  }
  
  .info-header h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin: 10px 0;
  }
  
  .vehicle-year {
    font-family: var(--font-display);
    font-size: 1.2rem;
    color: var(--silver);
  }
  
  .info-price {
    display: flex;
    align-items: baseline;
    gap: 10px;
    margin-bottom: var(--space-md);
  }
  
  .price-amount {
    font-family: var(--font-display);
    font-size: 2.5rem;
    color: var(--gold);
  }
  
  .price-currency {
    font-family: var(--font-headline);
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    color: var(--silver);
  }
  
  .price-vat {
    font-size: 0.85rem;
    color: var(--silver);
  }
  
  .info-specs {
    margin-bottom: var(--space-md);
  }
  
  .spec-row {
    display: flex;
    justify-content: space-between;
    padding: 15px 0;
    border-bottom: 1px solid var(--graphite);
  }
  
  .spec-label {
    font-size: 0.9rem;
    color: var(--silver);
  }
  
  .spec-value {
    font-size: 0.95rem;
    color: var(--ivory);
  }
  
  .info-features,
  .info-description {
    margin-bottom: var(--space-md);
  }
  
  .info-features h3,
  .info-description h3 {
    font-family: var(--font-headline);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: var(--space-sm);
  }
  
  .info-features ul {
    list-style: none;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
  }
  
  .info-features li {
    font-size: 0.9rem;
    color: var(--pearl);
    padding-left: 15px;
    position: relative;
  }
  
  .info-features li::before {
    content: '—';
    position: absolute;
    left: 0;
    color: var(--gold);
  }
  
  .info-description p {
    font-size: 0.95rem;
    line-height: 1.8;
  }
  
  .info-cta {
    padding-top: var(--space-md);
    border-top: 1px solid var(--slate);
  }
  
  .info-cta p {
    font-family: var(--font-display);
    font-style: italic;
    font-size: 1.1rem;
    margin-bottom: var(--space-sm);
  }
  
  .info-cta .btn {
    display: block;
    margin-bottom: 15px;
  }
  
  /* Similar */
  .similar {
    background: var(--charcoal);
  }
  
  .similar-header {
    margin-bottom: var(--space-lg);
  }
  
  .similar-header h2 {
    margin-top: var(--space-sm);
  }
  
  .similar-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }
  
  @media (max-width: 1024px) {
    .vehicle-detail {
      grid-template-columns: 1fr;
      padding: 0 var(--space-md) var(--space-lg);
    }
    
    .breadcrumb {
      padding: 120px var(--space-md) var(--space-sm);
    }
    
    .similar-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .info-features ul {
      grid-template-columns: 1fr;
    }
    
    .similar-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
