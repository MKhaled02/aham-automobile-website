    .fahrzeuge-grid {
      grid-template-columns: 1fr;
    }
    
    .trust-bar {
      grid-template-columns: 1fr;
    }
    
    .trust-item {
      border-right: none;
      border-bottom: 1px solid var(--gray-light);
    }
    
    .trust-item:last-child {
