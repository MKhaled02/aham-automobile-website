---
import Layout from '../layouts/Layout.astro';
import FahrzeugCard from '../components/FahrzeugCard.astro';
import { getAlleFahrzeuge } from '../lib/sanity';
import type { Fahrzeug } from '../types/sanity';

const alleFahrzeuge: Fahrzeug[] = await getAlleFahrzeuge();
const fahrzeuge = alleFahrzeuge.slice(0, 6);
---

<Layout title="AHAM Automobile | Exklusive Fahrzeuge">
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg">
      <img src="https://images.unsplash.com/photo-1503376780353-7e6692767b70?w=1920&q=85" alt="Luxury Car">
      <div class="hero-overlay"></div>
    </div>
    
    <div class="hero-content">
      <div class="hero-intro">
        <span class="label">Ludwigsfelde</span>
        <div class="divider"></div>
      </div>
      
      <h1>
        <span class="hero-line">Die Kunst des</span>
        <span class="hero-line hero-accent">Fahrens</span>
      </h1>
      
      <p class="hero-text">
        Entdecken Sie außergewöhnliche Fahrzeuge, ausgewählt mit 
        höchstem Anspruch an Qualität und Ästhetik.
      </p>
      
      <div class="hero-actions">
        <a href="/fahrzeuge" class="btn btn-primary">Kollektion entdecken</a>
        <a href="/kontakt" class="btn btn-ghost">Beratung anfragen</a>
      </div>
    </div>
    
    <div class="hero-scroll">
      <span>Scroll</span>
      <div class="scroll-line"></div>
    </div>
    
    <div class="hero-stats">
      <div class="stat">
        <span class="stat-number">5.0</span>
        <span class="stat-label">Google Bewertung</span>
      </div>
      <div class="stat">
        <span class="stat-number">21</span>
        <span class="stat-label">Bewertungen</span>
      </div>
    </div>
  </section>
  
  <!-- Philosophy Section -->
  <section class="section philosophy">
    <div class="philosophy-content">
      <div class="philosophy-left">
        <span class="label">Philosophie</span>
        <h2>
          Qualität ist kein<br>
          <span class="italic text-gold">Zufall</span>
        </h2>
      </div>
      
      <div class="philosophy-right">
        <p>
          Bei AHAM Automobile glauben wir, dass der Kauf eines Fahrzeugs 
          mehr ist als eine Transaktion. Es ist der Beginn einer Beziehung, 
          die auf Vertrauen und gegenseitigem Respekt basiert.
        </p>
        <p>
          Jedes Fahrzeug in unserer Kollektion wird persönlich ausgewählt 
          und durchläuft eine umfassende Prüfung. Wir verkaufen nur, 
          was wir selbst fahren würden.
        </p>
        
        <div class="philosophy-features">
          <div class="feature">
            <span class="feature-icon">—</span>
            <span>Geprüfte Fahrzeughistorie</span>
          </div>
          <div class="feature">
            <span class="feature-icon">—</span>
            <span>Transparente Beratung</span>
          </div>
          <div class="feature">
            <span class="feature-icon">—</span>
            <span>Faire Konditionen</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Collection Section -->
  <section class="section collection">
    <div class="collection-header">
      <div class="collection-intro">
        <span class="label">Aktuelle Auswahl</span>
        <h2>Unsere <span class="italic">Kollektion</span></h2>
      </div>
      
      <p class="collection-count">
        <span class="count-number">{alleFahrzeuge.length}</span>
        <span class="count-label">Fahrzeuge verfügbar</span>
      </p>
    </div>
    
    <div class="collection-grid">
      {fahrzeuge.length > 0 ? (
        fahrzeuge.map((fahrzeug, index) => (
          <FahrzeugCard fahrzeug={fahrzeug} index={index} />
        ))
      ) : (
        <div class="no-vehicles">
          <p class="font-display italic">Aktuell keine Fahrzeuge verfügbar</p>
          <p class="text-silver">Kontaktieren Sie uns für individuelle Anfragen</p>
        </div>
      )}
    </div>
    
    {alleFahrzeuge.length > 6 && (
      <div class="collection-cta">
        <a href="/fahrzeuge" class="btn btn-primary">Gesamte Kollektion ansehen</a>
      </div>
    )}
  </section>
  
  <!-- Trust Section -->
  <section class="section trust">
    <div class="trust-image">
      <img src="https://images.unsplash.com/photo-1489824904134-891ab64532f1?w=1200&q=80" alt="Premium Interior">
    </div>
    
    <div class="trust-content">
      <span class="label">Vertrauen</span>
      <h2>
        Was unsere<br>
        <span class="italic text-gold">Kunden sagen</span>
      </h2>
      
      <blockquote class="testimonial">
        <p>
          „Hervorragende Beratung und ein makelloses Fahrzeug. 
          Hier stimmt einfach alles – vom ersten Kontakt bis zur Übergabe."
        </p>
        <cite>— Google Bewertung</cite>
      </blockquote>
      
      <div class="trust-rating">
        <div class="stars">★★★★★</div>
        <span class="rating-text">5.0 von 5 Sternen bei Google</span>
      </div>
    </div>
  </section>
  
  <!-- Contact CTA Section -->
  <section class="section cta">
    <div class="cta-content">
      <span class="label">Kontakt</span>
      <h2>
        Bereit für Ihr<br>
        <span class="italic text-gold">nächstes Fahrzeug?</span>
      </h2>
      <p>
        Vereinbaren Sie einen persönlichen Termin. 
        Wir nehmen uns Zeit für Sie.
      </p>
      
      <div class="cta-contact">
        <a href="tel:01708949479" class="cta-phone">
          <span class="phone-label">Telefon</span>
          <span class="phone-number">0170 894 9479</span>
        </a>
        
        <div class="cta-location">
          <span class="location-label">Standort</span>
          <address>
            Nuthedamm 17<br>
            14974 Ludwigsfelde
          </address>
        </div>
      </div>
      
      <a href="/kontakt" class="btn btn-primary">Kontakt aufnehmen</a>
    </div>
  </section>
  
</Layout>

<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 var(--space-lg);
  }
  
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
  
  .hero-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.4);
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(13,13,13,0.9) 0%, rgba(13,13,13,0.5) 50%, rgba(13,13,13,0.7) 100%);
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding-top: 100px;
  }
  
  .hero-intro {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: var(--space-md);
  }
  
  .hero h1 {
    margin-bottom: var(--space-md);
  }
  
  .hero-line {
    display: block;
  }
  
  .hero-accent {
    font-style: italic;
    color: var(--gold);
  }
  
  .hero-text {
    font-size: 1.2rem;
    max-width: 500px;
    margin-bottom: var(--space-lg);
    line-height: 1.9;
  }
  
  .hero-actions {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }
  
  .hero-scroll {
    position: absolute;
    bottom: 50px;
    left: var(--space-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }
  
  .hero-scroll span {
    font-family: var(--font-headline);
    font-size: 0.6rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--silver);
    writing-mode: vertical-rl;
  }
  
  .scroll-line {
    width: 1px;
    height: 80px;
    background: linear-gradient(180deg, var(--gold), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }
  
  @keyframes scrollPulse {
    0%, 100% { opacity: 1; transform: scaleY(1); }
    50% { opacity: 0.5; transform: scaleY(0.8); }
  }
  
  .hero-stats {
    position: absolute;
    bottom: 50px;
    right: var(--space-lg);
    display: flex;
    gap: var(--space-lg);
  }
  
  .stat {
    text-align: right;
  }
  
  .stat-number {
    display: block;
    font-family: var(--font-display);
    font-size: 3rem;
    color: var(--ivory);
    line-height: 1;
  }
  
  .stat-label {
    font-family: var(--font-headline);
    font-size: 0.6rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--silver);
  }
  
  /* Philosophy Section */
  .philosophy {
    background: var(--charcoal);
  }
  
  .philosophy-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-xl);
    align-items: start;
  }
  
  .philosophy-left h2 {
    margin-top: var(--space-sm);
  }
  
  .philosophy-right p {
    margin-bottom: var(--space-md);
    font-size: 1.1rem;
    line-height: 1.9;
  }
  
  .philosophy-features {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-top: var(--space-md);
  }
  
  .feature {
    display: flex;
    align-items: center;
    gap: 15px;
    font-size: 0.95rem;
    color: var(--pearl);
  }
  
  .feature-icon {
    color: var(--gold);
    font-weight: 300;
  }
  
  /* Collection Section */
  .collection {
    background: var(--obsidian);
  }
  
  .collection-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: var(--space-lg);
  }
  
  .collection-intro h2 {
    margin-top: var(--space-sm);
  }
  
  .collection-count {
    display: flex;
    align-items: baseline;
    gap: 10px;
  }
  
  .count-number {
    font-family: var(--font-display);
    font-size: 3rem;
    color: var(--gold);
  }
  
  .count-label {
    font-size: 0.85rem;
    color: var(--silver);
  }
  
  .collection-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }
  
  .no-vehicles {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-xl);
    background: var(--charcoal);
  }
  
  .no-vehicles p:first-child {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
  
  .collection-cta {
    text-align: center;
    margin-top: var(--space-lg);
  }
  
  /* Trust Section */
  .trust {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    padding: 0;
    background: var(--charcoal);
  }
  
  .trust-image {
    height: 100%;
    min-height: 600px;
  }
  
  .trust-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.8);
  }
  
  .trust-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .trust-content h2 {
    margin: var(--space-sm) 0 var(--space-lg);
  }
  
  .testimonial {
    margin-bottom: var(--space-lg);
    padding-left: var(--space-md);
    border-left: 1px solid var(--gold);
  }
  
  .testimonial p {
    font-family: var(--font-display);
    font-size: 1.4rem;
    font-style: italic;
    color: var(--ivory);
    line-height: 1.7;
    margin-bottom: var(--space-sm);
  }
  
  .testimonial cite {
    font-family: var(--font-headline);
    font-size: 0.75rem;
    font-style: normal;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--silver);
  }
  
  .trust-rating {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .stars {
    color: var(--gold);
    font-size: 1.2rem;
    letter-spacing: 3px;
  }
  
  .rating-text {
    font-size: 0.85rem;
    color: var(--silver);
  }
  
  /* CTA Section */
  .cta {
    background: var(--obsidian);
    text-align: center;
    padding: var(--space-xl);
  }
  
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    margin: var(--space-sm) 0;
  }
  
  .cta-content > p {
    margin-bottom: var(--space-lg);
    font-size: 1.1rem;
  }
  
  .cta-contact {
    display: flex;
    justify-content: center;
    gap: var(--space-xl);
    margin-bottom: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--slate);
    border-bottom: 1px solid var(--slate);
  }
  
  .cta-phone,
  .cta-location {
    text-align: left;
  }
  
  .phone-label,
  .location-label {
    display: block;
    font-family: var(--font-headline);
    font-size: 0.6rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 8px;
  }
  
  .phone-number {
    font-family: var(--font-display);
    font-size: 1.5rem;
    color: var(--ivory);
    transition: color 0.3s ease;
  }
  
  .cta-phone:hover .phone-number {
    color: var(--gold);
  }
  
  .cta-location address {
    font-style: normal;
    font-size: 1rem;
    color: var(--pearl);
    line-height: 1.6;
  }
  
  /* Responsive */
  @media (max-width: 1200px) {
    .collection-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 968px) {
    .hero {
      padding: 0 var(--space-md);
    }
    
    .hero-stats {
      display: none;
    }
    
    .hero-scroll {
      left: var(--space-md);
    }
    
    .philosophy-content {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    
    .collection-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }
    
    .trust {
      grid-template-columns: 1fr;
    }
    
    .trust-image {
      min-height: 400px;
    }
    
    .cta-contact {
      flex-direction: column;
      align-items: center;
      gap: var(--space-md);
    }
    
    .cta-phone,
    .cta-location {
      text-align: center;
    }
  }
  
  @media (max-width: 768px) {
    .collection-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-actions {
      flex-direction: column;
    }
  }
</style>
