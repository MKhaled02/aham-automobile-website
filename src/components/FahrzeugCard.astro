---
import { urlFor } from '../lib/sanity';
import type { Fahrzeug } from '../types/sanity';

interface Props {
  fahrzeug: Fahrzeug;
  index?: number;
}

const { fahrzeug, index = 0 } = Astro.props;

const kraftstoffLabels: Record<string, string> = {
  benzin: 'Benzin',
  diesel: 'Diesel',
  elektro: 'Elektro',
  'hybrid-benzin': 'Hybrid',
  'hybrid-diesel': 'Hybrid',
  'plugin-hybrid': 'Plug-in-Hybrid'
};
---

<a 
  href={`/fahrzeuge/${fahrzeug.slug}`} 
  class="vehicle-card"
  style={`animation-delay: ${index * 0.1}s`}
>
  <div class="card-image">
    {fahrzeug.hauptbild && (
      <img 
        src={urlFor(fahrzeug.hauptbild).width(800).height(600).url()} 
        alt={`${fahrzeug.marke} ${fahrzeug.modell}`}
        loading="lazy"
      />
    )}
    <div class="card-overlay"></div>
    
    {fahrzeug.status === 'reserviert' && (
      <span class="card-status reserved">Reserviert</span>
    )}
  </div>
  
  <div class="card-content">
    <div class="card-header">
      <span class="card-brand">{fahrzeug.marke}</span>
      <span class="card-year">{fahrzeug.baujahr}</span>
    </div>
    
    <h3 class="card-title">{fahrzeug.modell}</h3>
    
    <div class="card-specs">
      <span>{fahrzeug.kilometerstand?.toLocaleString('de-DE')} km</span>
      <span class="spec-dot"></span>
      <span>{kraftstoffLabels[fahrzeug.kraftstoff] || fahrzeug.kraftstoff}</span>
      {fahrzeug.leistungPS && (
        <>
          <span class="spec-dot"></span>
          <span>{fahrzeug.leistungPS} PS</span>
        </>
      )}
    </div>
    
    <div class="card-footer">
      <span class="card-price">
        {fahrzeug.preis?.toLocaleString('de-DE')}
        <span class="price-currency">â‚¬</span>
      </span>
      <span class="card-cta">
        Details
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </div>
  
  <div class="card-border"></div>
</a>

<style>
  .vehicle-card {
    display: block;
    background: var(--charcoal);
    position: relative;
    opacity: 0;
    animation: fadeIn 0.8s var(--ease-smooth) forwards;
  }
  
  .card-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--gold), transparent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.6s var(--ease-smooth);
  }
  
  .vehicle-card:hover .card-border {
    transform: scaleX(1);
  }
  
  /* Image */
  .card-image {
    position: relative;
    height: 280px;
    overflow: hidden;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s var(--ease-smooth), filter 0.5s ease;
    filter: brightness(0.95);
  }
  
  .vehicle-card:hover .card-image img {
    transform: scale(1.08);
    filter: brightness(1);
  }
  
  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, transparent 50%, rgba(13, 13, 13, 0.8) 100%);
    pointer-events: none;
  }
  
  .card-status {
    position: absolute;
    top: 20px;
    left: 20px;
    font-family: var(--font-headline);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    padding: 8px 16px;
    background: rgba(201, 169, 98, 0.9);
    color: var(--obsidian);
  }
  
  .card-status.reserved {
    background: rgba(255, 255, 255, 0.9);
  }
  
  /* Content */
  .card-content {
    padding: 30px;
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }
  
  .card-brand {
    font-family: var(--font-headline);
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--gold);
  }
  
  .card-year {
    font-family: var(--font-display);
    font-size: 0.9rem;
    color: var(--silver);
  }
  
  .card-title {
    font-family: var(--font-display);
    font-size: 1.8rem;
    font-weight: 500;
    color: var(--ivory);
    margin-bottom: 15px;
    transition: color 0.3s ease;
  }
  
  .vehicle-card:hover .card-title {
    color: var(--gold);
  }
  
  .card-specs {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 0.85rem;
    color: var(--silver);
    margin-bottom: 25px;
  }
  
  .spec-dot {
    width: 3px;
    height: 3px;
    background: var(--slate);
    border-radius: 50%;
  }
  
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid var(--slate);
  }
  
  .card-price {
    font-family: var(--font-display);
    font-size: 1.6rem;
    color: var(--ivory);
  }
  
  .price-currency {
    font-size: 1rem;
    color: var(--silver);
    margin-left: 2px;
  }
  
  .card-cta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-headline);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--pearl);
    transition: all 0.3s ease;
  }
  
  .card-cta svg {
    transition: transform 0.3s ease;
  }
  
  .vehicle-card:hover .card-cta {
    color: var(--gold);
  }
  
  .vehicle-card:hover .card-cta svg {
    transform: translateX(4px);
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @media (max-width: 768px) {
    .card-image {
      height: 220px;
    }
    
    .card-content {
      padding: 25px;
    }
  }
</style>
