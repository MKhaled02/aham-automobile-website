  <nav class="nav">
    <a href="/" class="logo">
      <span class="logo-text">AHAM</span>
      <span class="logo-divider"></span>
      <span class="logo-sub">AUTOMOBILE</span>
    </a>
    
    <ul class="nav-links">
      <li><a href="/">Startseite</a></li>
      <li><a href="/fahrzeuge">Kollektion</a></li>
      <li><a href="/kontakt">Kontakt</a></li>
    </ul>
    
