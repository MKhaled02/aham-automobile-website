<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: rgba(248, 247, 244, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--gray-light);
  }
  
  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 60px;
    max-width: 1600px;
    margin: 0 auto;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .logo-icon {
    height: 40px;
    width: auto;
    color: var(--olive);
  }
  
  .logo-text {
    font-family: var(--font-display);
    font-size: 1.3rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--olive);
  }
  
  .nav-links {
    display: flex;
    gap: 40px;
    list-style: none;
  }
  
  .nav-links a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--gray-dark);
    position: relative;
    padding: 5px 0;
    transition: color 0.3s ease;
  }
  
  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--olive);
    transition: width 0.3s ease;
  }
  
  .nav-links a:hover {
    color: var(--olive);
  }
  
  .nav-links a:hover::after {
    width: 100%;
  }
  
  .nav-phone {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--olive);
    font-weight: 600;
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }
  
  .nav-phone:hover {
    color: var(--olive-dark);
  }
  
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }
  
  .mobile-menu-btn span {
    width: 25px;
    height: 2px;
    background: var(--black);
    transition: all 0.3s ease;
  }
  
  @media (max-width: 968px) {
    .nav {
      padding: 15px 20px;
    }
    
    .nav-links {
      display: none;
    }
    
    .nav-phone {
      display: none;
    }
    
    .mobile-menu-btn {
      display: flex;
    }
  }
</style>
