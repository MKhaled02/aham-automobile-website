    </button>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 0 var(--space-lg);
    transition: all 0.5s var(--ease-smooth);
  }
  
  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, var(--obsidian) 0%, transparent 100%);
    opacity: 0.95;
    z-index: -1;
  }
  
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }
  
  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .logo-text {
    font-family: var(--font-display);
    font-size: 1.6rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    color: var(--ivory);
  }
  
  .logo-divider {
    width: 1px;
    height: 20px;
    background: var(--gold);
  }
  
  .logo-sub {
    font-family: var(--font-headline);
    font-size: 0.6rem;
    font-weight: 500;
    letter-spacing: 0.4em;
    color: var(--silver);
  }
  
  /* Nav Links */
  .nav-links {
    display: flex;
    gap: 50px;
    list-style: none;
  }
  
  .nav-links a {
    font-family: var(--font-headline);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--pearl);
    position: relative;
    padding: 10px 0;
    transition: color 0.4s var(--ease-smooth);
  }
  
  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--gold);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.5s var(--ease-smooth);
  }
  
  .nav-links a:hover {
    color: var(--ivory);
  }
  
  .nav-links a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }
  
  /* Contact */
  .nav-contact {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 2px;
  }
  
  .contact-label {
    font-family: var(--font-headline);
    font-size: 0.6rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--gold);
  }
  
  .contact-number {
    font-family: var(--font-display);
    font-size: 1rem;
    color: var(--ivory);
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }
  
  .nav-contact:hover .contact-number {
    color: var(--gold);
  }
  
  /* Mobile Menu Toggle */
  .menu-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
  }
  
  .menu-toggle span {
    width: 24px;
    height: 1px;
    background: var(--ivory);
    transition: all 0.3s ease;
  }
  
  @media (max-width: 968px) {
    .header {
      padding: 0 var(--space-sm);
    }
    
    .nav-links,
    .nav-contact {
      display: none;
    }
    
    .menu-toggle {
      display: flex;
    }
  }
</style>
